<%= turbo_frame_tag "main_content" do %>
  <%= form_with model: @product, class: "space-y-4" do |form| %>
  
    <% @product.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
    <% end %>

    <!-- Título -->
    <div>
      <%= form.text_field :title, placeholder: t('.title_placeholder'), class: "rounded-2xl border-gray-200 w-full border px-4 py-2 text-sm shadow-sm" %>
    </div>

    <!-- Descripción -->
    <div>
      <%= form.text_area :description, placeholder: t('.description_placeholder'), rows: 4, class: "rounded-2xl border-gray-200 w-full border px-4 py-2 text-sm shadow-sm" %>
    </div>

    <!-- Precio -->
    <div>
      <%= form.number_field :price, placeholder: t('.price_placeholder'), class: "rounded-2xl border-gray-200 w-full border px-4 py-2 text-sm shadow-sm" %>
    </div>

    <!-- Stock -->
    <div>
      <%= form.number_field :stock, placeholder: "Cantidad en stock", class: "rounded-2xl border-gray-200 w-full border px-4 py-2 text-sm shadow-sm" %>
    </div>

    <!-- Categoría -->
    <div>
      <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name, 
          { prompt: t('.category_placeholder') },
          class: "rounded-2xl border-gray-200 w-full border px-4 py-2 text-sm shadow-sm text-gray-600" %>
    </div>

    <!-- Imagen -->
    <div class="rounded-2xl border-gray-200 w-full border px-4 py-2 text-sm shadow-sm bg-white">
      <%= form.file_field :photo, class: "text-gray-500" %>
    </div>

    <!-- Botón de envío -->
    <div>
      <%= form.submit t('.submit'), class: "px-4 py-2 font-semibold text-sm bg-cyan-500 text-white rounded-2xl shadow-sm hover:bg-cyan-600 transition" %>
    </div>
  <% end %>
<% end %>