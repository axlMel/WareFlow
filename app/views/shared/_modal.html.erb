<turbo-frame id="modal" data-controller="modal">
  <!-- Fondo del modal -->
  <div data-modal-target="background"
       data-action="click->modal#closeOnBackgroundClick"
       class="fixed inset-0 bg-black/30 backdrop-blur-sm z-40 flex items-center justify-center">

    <!-- Panel del modal -->
    <div data-modal-target="panel"
         class="relative bg-white rounded-xl shadow-xl p-6 w-full max-w-lg transform transition-all scale-95 z-50">
      
      <!-- BotÃ³n de cerrar -->
      <button type="button"
              data-action="click->modal#close"
              class="absolute top-3 right-3 text-gray-500 hover:text-gray-700 text-2xl font-bold">
        &times;
      </button>

      <%= yield %>
    </div>
  </div>
</turbo-frame>