<%= turbo_frame_tag "modal" do %>
  <div class="p-6" data-controller="modal">
    <%= render "shared/modal" do %>

      <!-- Título -->
      <h1 class="text-2xl font-bold text-gray-800 border-b pb-3 mb-6">
        Importar Excel
      </h1>

      <!-- Descargar archivo base -->
      <div class="mb-6 p-4 rounded-xl bg-sky-50 border border-sky-200">
        <p class="text-sm text-sky-800 mb-2 font-medium">
          ¿No tienes el formato correcto?
        </p>
        <!-- descargar_folios_path -->
        <%= link_to "Descargar archivo base",
          #,
          class: "inline-flex items-center gap-2 text-sky-700 font-semibold hover:underline" %>
      </div>

      <!-- Formulario -->
      <%= form_with url: import_folios_path,
                    multipart: true,
                    data: { turbo_frame: "_top" },
                    class: "space-y-5" do |f| %>

        <!-- Input personalizado -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">
            Selecciona el archivo Excel
          </label>

          <div class="flex items-center gap-4">
            <label
              class="cursor-pointer inline-flex items-center px-4 py-2 rounded-full
                     bg-violet-100 text-violet-700 font-semibold
                     hover:bg-violet-200 transition">

              Elegir archivo
              <%= f.file_field :file,
                accept: ".xlsx,.xlsm",
                class: "hidden" %>
            </label>

            <span class="text-sm text-gray-500">
              .xlsx o .xlsm
            </span>
          </div>
        </div>

        <!-- Botones -->
        <div class="pt-4 flex justify-end gap-3">
          <button type="button"
                  data-action="click->modal#close"
                  class="px-4 py-2 rounded-xl border border-gray-300 text-gray-600 hover:bg-gray-100">
            Cancelar
          </button>

          <%= f.submit "Importar",
            class: "bg-emerald-600 hover:bg-emerald-700
                    text-white font-semibold px-6 py-2 rounded-xl transition" %>
        </div>

      <% end %>

    <% end %>
  </div>
<% end %>



