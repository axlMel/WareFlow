<div class="min-h-screen p-4 lg:p-6 space-y-6">
  <%= form_with(model: @delivery, data: { turbo: false }) do |form| %>

    <!-- Grid principal: 1/3 izquierda, 2/3 derecha -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 items-start">

      <!-- Panel izquierdo -->
      <div class="space-y-4 bg-white p-6 rounded-2xl shadow w-full lg:col-span-1">
        <h1 class="text-2xl font-bold text-gray-800">Nueva Entrega</h1>
        <h2 class="text-lg font-semibold text-gray-800">Información general</h2>

        <div>
          <%= form.label :folio_id, "Folio disponible", class: "block text-sm font-medium text-gray-700" %>
          <%= form.collection_select :folio_id,
                Folio.where(status: :crafted),
                :id,
                ->(f) { "##{f.id} - #{f.client}" },
                { prompt: "Selecciona un folio" },
                { class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                  data: { controller: "folio-autofill", action: "change->folio-autofill#updateClient" } } %>
        </div>

        <div>
          <%= form.label :client, "Cliente", class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_field :client,
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                data: { delivery_target: "client" } %>
        </div>

        <div>
          <%= form.label :user_id, "Usuario receptor", class: "block text-sm font-medium text-gray-700" %>
          <%= form.collection_select :user_id, @users, :id, :username,
                { prompt: "Selecciona un usuario" },
                class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>
      </div>

      <!-- Panel derecho -->
       <div class="space-y-4 bg-white p-6 rounded-2xl shadow w-full lg:col-span-2">
        <h2 class="text-lg font-semibold text-gray-800 mb-4">Asignaciones de productos</h2>

        <div data-controller="assignment-fields" class="space-y-4">
          <!-- Tarjetas en grilla -->
          <div id="assignments-container"
               data-assignment-fields-target="container"
               class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
            <%= form.fields_for :assignments do |a| %>
              <%= render 'assignment_fields', f: a %>
            <% end %>
          </div>

          <!-- Template oculto para JS -->
          <div id="assignment-template" data-assignment-fields-target="template" style="display: none;">
            <%= capture do %>
              <%= form.fields_for(:assignments, Assignment.new, child_index: "NEW_RECORD") do |a| %>
                <%= render 'assignment_fields', f: a %>
              <% end %>
            <% end %>
          </div>

          <!-- Botón agregar al final -->
          <div>
            <%= link_to "Agregar producto", "#",
                data: { action: "assignment-fields#add" },
                class: "inline-block bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md shadow-sm text-sm font-medium" %>
          </div>
        </div>
      </div>

    </div>

    <!-- Botón crear -->
    <div class="flex justify-end mt-6">
      <%= form.submit "Crear Entrega", class: "bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-xl shadow text-sm font-medium" %>
    </div>

  <% end %>
</div>
