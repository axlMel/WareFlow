<%= turbo_frame_tag "modal" do %>
  <div class="p-6" data-controller="modal">
    <%= render "shared/modal" do %>
      <div class="space-y-6">
        <h1 class="text-2xl font-bold text-gray-800 border-b mb-4">Detalles del Folio -
          <span class="inline-block px-1 py-1 font-semibold text-xl text-sky-600">ID: <%= @folio.id %></span>
        </h1>

        <div class="bg-white rounded-2xl shadow-lg p-6 ring-1 ring-gray-200 space-y-6 text-sm text-gray-700">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <p class="text-base text-gray-500">Cliente:</p>
              <p class="text-sm font-medium text-gray-900"><%= @folio.client || "-" %></p>
            </div>
            <div>
              <p class="text-base text-gray-500">Usuario asignado:</p>
              <p class="text-sm font-medium text-gray-900"><%= @folio.user&.username || "No asignado" %></p>
            </div>
            <div>
              <p class="text-base text-gray-500">Estado:</p>
              <p class="text-sm font-medium text-gray-900"><%= @folio.status.presence || "No status" %></p>
            </div>
            <div>
              <p class="text-base text-gray-500">Servicio:</p>
              <p class="text-sm font-medium text-gray-900"><%= @folio.service.presence || "No especificado" %></p>
            </div>
            <div class="md:col-span-2">
              <p class="text-base text-gray-500">Accesorios:</p>
              <p class="text-sm font-medium text-gray-900"><%= @folio.accessories.presence || "Ninguno" %></p>
            </div>
            <div class="md:col-span-2">
              <p class="ftext-base text-gray-500">Fecha de creación:</p>
              <p class="text-sm font-medium text-gray-900"><%= l(@folio.created_at, format: :long) %></p>
            </div>
          </div>

          <!-- Productos asignados -->
          <div>
            <h2 class="text-lg font-semibold text-gray-800 mb-2">Productos asignados</h2>

            <% if @folio.deliveries.any? %>
              <ul class="space-y-2 text-sm text-gray-700 list-disc pl-6">
                <% @folio.assignments.each do |assignment| %>
                  <li>
                    <span class="font-medium"><%= assignment.product.title %></span>
                    – Cantidad: <%= assignment.quantity %>
                  </li>
                <% end %>
              </ul>
            <% else %>
              <p class="text-gray-500 text-sm">No hay productos asignados a este folio aún.</p>
            <% end %>
          </div>
        </div>
        <!-- Acciones -->
        <div class="flex justify-between items-center text-sm">
          <%= link_to "← Volver al listado", folios_path, class: "text-sky-600 hover:text-blue-800 font-medium transition" %>
          <% unless @folio.delivered? %>
            <%= link_to "Editar", edit_folio_path(@folio), data: { turbo_frame: "modal" }, class: "text-yellow-600 hover:text-yellow-700 font-medium transition" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

