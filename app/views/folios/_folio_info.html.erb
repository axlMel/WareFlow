<div class="bg-gray-100 p-4 rounded shadow">
  <p><strong>Cliente:</strong> <%= folio.client %></p>
  <p><strong>Usuario:</strong> <%= folio.user.username %></p>
  <p><strong>Fecha de creaci√≥n:</strong> <%= folio.created_at.strftime("%d/%m/%Y") %></p>

  <h3 class="mt-4 font-semibold">Productos asignados:</h3>
  <div data-folio-target="assignments">
    <% assignments.each do |assignment| %>
      <div class="border p-2 my-2 bg-white shadow-sm">
        <p><strong>Producto:</strong> <%= assignment.product.title %></p>
        <p><strong>Cantidad:</strong> <%= assignment.quantity %></p>

        <%= check_box_tag "delivered_assignment_ids[]", assignment.id %>
        <%= label_tag "delivered_assignment_ids_#{assignment.id}", "Entregado correctamente" %>

        <%= check_box_tag "defective_assignment_ids[]", assignment.id %>
        <%= label_tag "defective_assignment_ids_#{assignment.id}", "Producto defectuoso" %>
      </div>
    <% end %>
  </div>
</div>