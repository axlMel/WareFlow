<%= form_with(model: folio, data: { turbo_frame: "_top"}, class: "space-y-4") do |f| %>
  <% if folio.errors.any? %>
    <div class="gb-red-100 text-red-800 border border-red-300 p-4 rounded-xl shadow-sm">
      <h2 class="font-semibold mb-2">
        <%= pluralize(folio.errors.count, "error") %> impidieron guardar el folio.
      </h2>
      <ul class="list-disc list-inside text-sm">
        <%= folio.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :client, "Cliente", class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= f.text_field :client, class: "w-full border px-2 py-1 rounded" %>
  </div>

  <div>
    <%= f.label :service, "Servicio", class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= f.select :service, ["Instalación", "Desinstalación", "Revisión", "Demo"], {}, prompt: "Selecciona un tipo de servicio", class: "w-full border px-2 py-1 rounded" %>
  </div>

  <div>
    <%= f.label :accessories, "Accesorios", class: "block text-sm font-semibold text-gray-700 mb-1" %>
    <%= f.text_field :accessories, class: "w-full border px-2 py-1 rounded", placeholder: "Escribe los accesorios necesarios..." %>
  </div>

  <div>
    <%= f.submit folio.new_record? ? "Crear Folio" : "Actualizar folio", class: "bg-green-500 hover:bg-green-600 text-white font-semibold px-4 py-2 rounded-xl shadow" %>
    <%= link_to "Cancelar", folios_path, class: "bg-red-500 hover:bg-red-600 text-white font-semibold px-4 py-2 rounded-xl shadow" %>
  </div>
<% end %>
