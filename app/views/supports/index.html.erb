<div class="min-h-screen flex flex-col lg:flex-row gap-6 p-4 lg:p-6">
  <!-- Sidebar de filtros -->
  <div class="w-full lg:w-1/4 space-y-4">
    <div class="bg-white p-4 rounded-2xl shadow space-y-4">
      <h1 class="text-2xl font-bold text-gray-800">Soportes</h1>

      <%= form_with url: supports_path, method: :get, data: { controller: "debounce-search", turbo_frame: "supports_table" }, class: "space-y-4" do |f| %>

        <!-- Busqueda manual -->
        <div>
          <%= f.label :q, "Busqueda", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :q, value: params[:q], placeholder: "Usuario, cliente o folio", data: { debounce_search_target: "input", action: "input->debounce-search#search" }, class: "w-full border border-gray-300 rounded-xl px-3 py-2 text-sm" %>
        </div>
        <!-- Fechas -->
        <div class="grid grid-cols-2 gap-3">
          <div>
            <%= f.label :from, "Desde", class: "block text-sm text-gray-600" %>
            <%= f.date_field :from, value: params[:from], class: "w-full border border-gray-300 rounded-xl px-2 py-1 text-sm" %>
          </div>
          <div>
            <%= f.label :to, "Hasta", class: "block text-sm text-gray-600" %>
            <%= f.date_field :to, value: params[:to], class: "w-full border border-gray-300 rounded-xl px-2 py-1 text-sm" %>
          </div>
        </div>

        <div class="pt-2">
          <%= f.submit "Filtrar", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-4 py-2 rounded-xl transition" %>
        </div>
      <% end %>
      <div class="pt-1 flex justify-center">
        <%= link_to "Agregar Soporte", new_support_path, class: "bg-purple-600 hover:bg-purple-700 text-white px-5 py-2 rounded-xl shadow" %>
      </div>
    </div>
  </div>


  <!-- Panel derecho: tabla de Soportes -->
  <div class="w-full lg:w-3/4 space-y-4">
    <div class="bg-white p-4 rounded-2xl shadow">
      <div class="flex justify-between mt-2 mb-2">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Historial de Soporte técnico</h2>
        <!-- Top controls -->
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-4">
          <!-- Right buttons -->
          <div class="flex flex-wrap gap-2">
            <a href="#" class="bg-emerald-600 hover:bg-emerald-700 text-white text-sm font-semibold px-4 py-2 rounded-xl shadow">Excel</a>
            <a href="#" class="bg-red-600 hover:bg-red-700 text-white text-sm font-semibold px-4 py-2 rounded-xl shadow">PDF</a>
          </div>
        </div>
      </div>
      
      <turbo-frame id="supports_table">
        <div class="overflow-x-auto rounded-xl border">
          <table class="min-w-full text-sm table-auto">
            <thead class="bg-gray-100 text-gray-600 uppercase text-xs">
              <tr>
                <th class="px-4 py-3 text-center"><%= sortable("service", "SERVICIO") %></th>
                <th class="px-4 py-3 text-center"><%= sortable("client", "CLIENTE") %></th>
                <th class="px-4 py-3 text-center"><%= sortable("folio_id", "FOLIO") %></th>
                <th class="px-4 py-3 text-center"><%= sortable("user_id", "USUARIO") %></th>
                <th class="px-4 py-3 text-left"><%= sortable("created_at", "FECHA CREACION") %></th>
                <th class="px-4 py-3 text-left"><%= sortable("updated_at", "FECHA ACTUALIZACIOM") %></th>
                <th class="px-4 py-3 text-right">ACTIONS</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @supports.each do |support| %>
                <tr class="hover:bg-indigo-50 transition">
                  <td class="px-4 py-3 text-center text-gray-700"><%= support.service %></td>
                  <td class="px-4 py-3 text-center"><%= support.client %></td>
                  <td class="px-4 py-3 text-center"><%= support.folio_id %></td>
                  <td class="px-4 py-3 text-center font-medium text-gray-800"><%= support.user&.username || "N/A" %></td>
                  <td class="px-4 py-3 text-left"><%= l(support.created_at, format: :short) %></td>
                  <td class="px-4 py-3 text-lef"><%= l(support.updated_at, format: :short) %></td>
                  <td class="px-4 py-3 text-right text-center space-x-2 whitespace-nowrap w-40">
                    <%= link_to "Ver", support_path(support), class: "text-blue-600 hover:underline text-sm", data: { turbo_frame: "modal" } %>
                    <%= link_to "Editar", edit_support_path(support), class: "text-yellow-600 hover:underline text-sm", data: { turbo_frame: "modal" } %>
                    <%= link_to "Eliminar", support_path(support), method: :delete, data: { confirm: "¿Estás seguro?" }, class: "text-red-600 hover:underline text-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="flex justify-between items-center mt-4 text-sm text-gray-600">
          <div class="flex items-center gap-2">
            <label for="per_page">Mostrar:</label>
            <%= form_with url: supports_path, method: :get, local: true do |f| %>
              <%= hidden_field_tag :q, params[:q] %> <!-- conserva búsqueda -->
              <%= select_tag :per_page,
                    options_for_select([10, 30, 50, 100], params[:per_page] || 10),
                    onchange: "this.form.submit();",
                    class: "border border-gray-300 rounded-lg px-2 py-1 text-sm" %>
            <% end %>
          </div>
          <div class="flex flex-wrap gap-2">
            <div>
              <span class="text-xs text-gray-400"><%= "Total: #{@pagy.count} Soportes de (#{@pagy.count})" %></span>
            </div>
            <div>
              <%= pagy_nav(@pagy).html_safe %>
            </div>
          </div>
        </div>
      </turbo-frame>      
    </div>
  </div>
</div>