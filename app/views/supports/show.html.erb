<%= turbo_frame_tag "modal" do %>
  <div class="p-6" data-controller="modal">
    <%= render "shared/modal" do %>
      <div class="space-y-6">
        <h1 class="text-2xl font-bold text-gray-800">Detalle del Soporte</h1>

        <div class="bg-white rounded-2xl shadow-lg p-6 ring-1 ring-gray-200 space-y-6 text-sm text-gray-700">
          <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <div>
              <p class="text-xs text-gray-500">Servicio</p>
              <p class="text-base font-medium text-gray-900"><%= @support.service.presence || "—" %></p>
            </div>

            <div>
              <p class="text-xs text-gray-500">Cliente</p>
              <p class="text-base font-medium text-gray-900"><%= @support.client.presence || "—" %></p>
            </div>

            <div>
              <p class="text-xs text-gray-500">Producto</p>
              <p class="text-base font-medium text-gray-900"><%= @support.product&.title || "—" %></p>
            </div>

            <div>
              <p class="text-xs text-gray-500">Folio</p>
              <p class="text-base font-medium text-gray-900"><%= @support.folio %></p>
            </div>

            <div>
              <p class="text-xs text-gray-500">Usuario</p>
              <p class="text-base font-medium text-gray-900"><%= @support.user&.username || "—" %></p>
            </div>

            <div>
              <p class="text-xs text-gray-500">Tipo de Vehículo</p>
              <p class="text-base font-medium text-gray-900"><%= @support.car_type.presence || "—" %></p>
            </div>

            <div>
              <p class="text-xs text-gray-500">Placa</p>
              <p class="text-base font-medium text-gray-900"><%= @support.plate.presence || "—" %></p>
            </div>

            <div>
              <p class="text-xs text-gray-500">Eco</p>
              <p class="text-base font-medium text-gray-900"><%= @support.eco.presence || "—" %></p>
            </div>
          </div>

          <% if @support.commit.present? %>
            <div>
              <p class="text-xs text-gray-500">Comentario</p>
              <div class="mt-1 bg-gray-50 border border-gray-200 rounded-xl p-4 text-sm text-gray-800 whitespace-pre-line">
                <%= @support.commit %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="flex justify-between items-center pt-4 text-sm">
          <%= link_to "← Volver al listado", supports_path, class: "text-blue-600 hover:text-blue-800 font-medium transition" %>
          <%= link_to "Editar soporte", edit_support_path(@support), class: "text-yellow-600 hover:text-yellow-700 font-medium transition" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
