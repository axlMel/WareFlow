<%= turbo_frame_tag "modal" do %>
  <div class="p-6">
    <%= render "shared/modal" do %>
      <div class="bg-white p-6 rounded-2xl shadow-xl max-w-xl mx-auto space-y-4">
        <h1 class="text-2xl font-bold text-gray-800 border-b pb-2">Detalle de Asignaci√≥n</h1>

        <div class="space-y-2 text-sm text-gray-700">
          <p><span class="font-semibold text-gray-800">ID:</span> <%= @assignment.id %></p>
          <p><span class="font-semibold text-gray-800">Producto:</span> <%= @assignment.product.title %></p>
          <p><span class="font-semibold text-gray-800">Cantidad:</span> <%= @assignment.quantity %></p>
          <p><span class="font-semibold text-gray-800">Folio entrega:</span> #<%= @assignment.delivery.folio.id %></p>
          <p><span class="font-semibold text-gray-800">Cliente:</span> <%= @assignment.delivery.client %></p>
          <p>
            <span class="font-semibold text-gray-800">Estado:</span>
            <span class="inline-block px-2 py-1 rounded-full text-xs font-semibold
              <%= @assignment.installed? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= @assignment.status.titleize %>
            </span>
          </p>
        </div>

        <div class="pt-4 flex justify-end space-x-2">
          <%= link_to "Editar", edit_assignment_path(@assignment),
                      class: "bg-yellow-500 text-white font-semibold px-4 py-2 rounded-xl hover:bg-yellow-600 transition" %>
          <%= link_to "Regresar", assignments_path,
                      class: "text-blue-600 hover:underline font-medium px-4 py-2 rounded-xl" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
