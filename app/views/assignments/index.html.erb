<div class="min-h-screen flex flex-col lg:flex-row gap-6 p-4 lg:p-6">
  <!-- Sidebar de filtros -->
  <div class="w-full lg:w-1/4 space-y-4">
    <div class="bg-white p-4 rounded-2xl shadow space-y-4">
      <h1 class="text-2xl font-bold text-gray-800">Asignaciones</h1>

      <%= form_with url: assignments_path, method: :get, data: { controller: "debounce-search", turbo_frame: "assignments_table" }, class: "space-y-4" do |f| %>

        <!-- Busqueda -->
        <div>
          <%= f.label :q, "Busqueda", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :q, value: params[:q], placeholder: "Usuario o producto", data: { debounce_search_target: "input", action: "input->debounce-search#search" }, class: "w-full border border-gray-300 rounded-xl px-3 py-2 text-sm" %>
        </div>

        <!-- Estado -->
        <div>
          <%= f.label :status, "Estado de asignación", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :status, options_for_select([["Asignado", "assigned"], ["instalado", "installed"]], params[:status]), { include_blank: "Solo asignados (default)"}, class: "w-full border border-gray-300 rounded-xl px-3 py-2 text-sm" %>
        </div>

        <!-- Fechas -->
        <div class="grid grid-cols-2 gap-3">
          <div>
            <%= f.label :from, "Desde", class: "block text-sm text-gray-600" %>
            <%= f.date_field :from, value: params[:from], class:"w-full border border-gray-300 rounded-xl px-2 py-1 text-sm" %>
          </div>
          <div>
            <%= f.label :to, "Hasta", class: "block text-sm text-gray-600" %>
            <%= f.date_field :to, value: params[:to], class: "w-full border border-gray-300 rounded-xl px-2 py-1 text-sm" %>
          </div>
        </div>

        <!-- Boton -->
        <div class="pt-2">
          <%= f.submit "Filtrar", class: "w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold px-4 py-2 rounded-xl transition" %>
        </div>
      <% end %>

      <div class="pt-1 flex justify-center">
        <%= link_to "Nueva Asignación", new_assignment_path, data: { turbo_frame: "modal" }, class: "bg-emerald-600 hover:bg-emerald-700 text-white px-4 py-2 rounded-xl text-sm font-medium shadow" %>
      </div>
    </div>
  </div>

  <!-- Tabla -->
  <div class="w-full lg:w-3/4 space-y-4">
    <div class="bg-white p-4 rounded-2xl shadow">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Historial de Asignaciones</h2>
      <!-- Tabla interna -->
      <turbo-frame id="assignments_table">
        <div class="overflow-x-auto rounded-xl border">
          <table class="min-w-full text-sm">
            <thead class="bg-gray-100 text-gray-600 uppercase text-sm">
              <tr>
                <th class="px-4 py-3 text-left">Usuario</th>
                <th class="px-4 py-3 text-left">Producto</th>
                <th class="px-4 py-3 text-center">Cantidad</th>
                <th class="px-4 py-3 text-center">Estado</th>
                <th class="px-4 py-3 text-left">Fecha</th>
                <th class="px-4 py-3 text-right">Acciones</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% @assignments.each do |assignment| %>
                <tr class="hover:bg-indigo-50 transition" id="<%= dom_id(assignment) %>">
                  <td class="px-4 py-3 font-medium text-gray-800"><%= assignment.user.username %></td>
                  <td class="px-4 py-3 text-gray-700"><%= assignment.product.title %></td>
                  <td class="px-4 py-3 text-center font-semibold"><%= assignment.quantity %></td>
                  <td class="px-4 py-3 text-center">
                    <span class="inline-flex px-2 py-1 rounded-full text-xs font-semibold
                      <%= assignment.assigned? ? 'bg-yellow-100 text-yellow-800' : 'bg-green-100 text-green-800' %>">
                      <%= assignment.status.titleize %>
                    </span>
                  </td>
                  <td class="px-4 py-3 text-gray-500 text-sm"><%= l(assignment.created_at, format: :short) %></td>
                  <td class="px-4 py-3 text-right space-x-3">
                    <%= link_to "Ver", assignment_path(assignment), data: { turbo_frame: "modal" }, class: "text-indigo-600 hover:underline text-sm" %>
                    <% unless assignment.installed? %>
                      <%= link_to "Editar", edit_assignment_path(assignment), data: { turbo_frame: "modal" }, class: "text-yellow-600 hover:underline text-sm" %>
                    <% end %>
                    <%= button_to "Eliminar", assignment_path(assignment),method: :delete, data: { turbo_confirm: "¿Estás seguro?", turbo_frame: "_top" }, class: "text-red-600 hover:underline text-sm" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="flex justify-between items-center mt-4">
          <p class="text-sm text-gray-500">
            Mostrando
            <span class="font-semibold"><%= @pagy.from %></span>
            a
            <span class="font-semibold"><%= @pagy.to %></span>
            de
            <span class="font-semibold"><%= @pagy.count %></span>
            asignaciones
          </p>
          <%= pagy_nav(@pagy, link_extra: 'data-turbo-frame="assignments_table"').html_safe %>
        </div>
      </turbo-frame>
    </div>
    <% if @assignments.empty? %>
      <div class="text-center py-10 text-gray-400">
        No hay asignaciones para mostrar
      </div>
    <% end %>
  </div>
</div>
<turbo-frame
  id="modal"
  src="<%= assignment_path(params[:show]) if params[:show].present? %>">
</turbo-frame>