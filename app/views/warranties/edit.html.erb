<%= turbo_frame_tag "modal" do %>
  <div class="p-6">
    <%= render "shared/modal" do %>
      <div class="p-6 space-y-6 bg-white rounded-2xl shadow">
        <h1 class="text-2xl font-bold text-gray-800 border-b pb-2">
          <%= action_name == "edit" ? "Editar Garantía" : "Nueva Garantía" %>
        </h1>

        <%= render "form", warranty: @warranty %>
      </div>
    <% end %>
  </div>
<% end %>