<%= turbo_frame_tag "modal" do %>
  <div class="p-6" data-controller="import-table modal">
    <%= render "shared/modal" do %>

      <h1 class="text-2xl font-bold mb-4">
        Vista previa de importación
      </h1>

      <%= form_with url: confirm_import_warranties_path,
                    data: { turbo_frame: "_top" } do %>

        <table class="min-w-full border text-sm">
          <thead>
            <tr class="bg-gray-100">
              <th class="p-2">Cliente</th>
              <th class="p-2">Comentario</th>
              <th class="p-2">Usuario</th>
              <th class="p-2">Producto</th>
              <th class="p-2">Estado</th>
              <th class="p-2"></th>
            </tr>
          </thead>

          <tr class="bg-yellow-50" data-import-table-target="bulkRow">
            <td class="p-2">
              <input type="text"
                     placeholder="Cliente (aplicar a todos)"
                     data-action="change->import-table#applyBulk"
                     data-field="client"
                     class="border rounded w-full">
            </td>

            <td class="p-2">
              <input type="text"
                     placeholder="Comentario (aplicar a todos)"
                     data-action="change->import-table#applyBulk"
                     data-field="commit"
                     class="border rounded w-full">
            </td>

            <td class="p-2">
              <select data-action="change->import-table#applyBulk"
                      data-field="user_id"
                      class="border rounded w-full">
                <option value=""></option>
                <% User.all.each do |u| %>
                  <option value="<%= u.id %>"><%= u.username %></option>
                <% end %>
              </select>
            </td>

            <td class="p-2">
              <select data-action="change->import-table#applyBulk"
                      data-field="product_id"
                      class="border rounded w-full">
                <option value=""></option>
                <% Product.all.each do |p| %>
                  <option value="<%= p.id %>"><%= p.title %></option>
                <% end %>
              </select>
            </td>

            <td class="p-2">
              <select data-action="change->import-table#applyBulk"
                      data-field="state"
                      class="border rounded w-full">
                <option value=""></option>
                <% Warranty.states.keys.each do |state| %>
                  <option value="<%= state %>"><%= state.humanize %></option>
                <% end %>
              </select>
            </td>

            <td></td>
          </tr>


          <tbody data-import-table-target="tbody">
            <% @rows.each_with_index do |row, index| %>
              <tr class="border-t" data-import-table-target="row">
                <td class="p-2">
                  <%= text_field_tag "rows[#{index}][client]", row[:client], class: "border rounded w-full" %>
                </td>

                <td class="p-2">
                  <%= text_field_tag "rows[#{index}][commit]", row[:commit], class: "border rounded w-full" %>
                </td>

                <td class="p-2">
                  <%= select_tag "rows[#{index}][user_id]",
                        options_from_collection_for_select(User.all, :id, :username, row[:user_id]),
                        include_blank: true,
                        class: "border rounded w-full" %>
                </td>

                <td class="p-2">
                  <%= select_tag "rows[#{index}][product_id]",
                        options_from_collection_for_select(Product.all, :id, :title, row[:product_id]),
                        include_blank: true,
                        class: "border rounded w-full" %>
                </td>

                <td class="p-2">
                  <%= select_tag "rows[#{index}][state]",
                        options_for_select(Warranty.states.keys, row[:state]),
                        class: "border rounded w-full" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <template data-import-table-target="template">
          <tr class="border-t" data-import-table-target="row">
            <td class="p-2">
              <input type="text" name="rows[INDEX][client]" class="border rounded w-full" data-action="change->import-table#validate change->import-table#validateAll">
            </td>

            <td class="p-2">
              <input type="text" name="rows[INDEX][commit]" class="border rounded w-full" data-action="change->import-table#validate change->import-table#validateAll">
            </td>

            <td class="p-2">
              <select name="rows[INDEX][user_id]" class="border rounded w-full" data-action="change->import-table#validate change->import-table#validateAll">
                <option value=""></option>
                <% User.all.each do |u| %>
                  <option value="<%= u.id %>"><%= u.email %></option>
                <% end %>
              </select>
            </td>

            <td class="p-2">
              <select name="rows[INDEX][product_id]" class="border rounded w-full" data-action="change->import-table#validate change->import-table#validateAll">
                <option value=""></option>
                <% Product.all.each do |p| %>
                  <option value="<%= p.id %>"><%= p.title %></option>
                <% end %>
              </select>
            </td>

            <td class="p-2">
              <select name="rows[INDEX][state]" class="border rounded w-full" data-action="change->import-table#validate change->import-table#validateAll">
                <% Warranty.states.keys.each do |s| %>
                  <option value="<%= s %>"><%= s %></option>
                <% end %>
              </select>
            </td>

            <td class="p-2 text-center">
              <button type="button"
                      data-action="click->import-table#removeRow"
                      class="text-red-500">
                ✕
              </button>
            </td>
          </tr>
        </template>

        <button type="button"
        data-action="click->import-table#addRow"
        class="bg-gray-200 px-3 py-1 rounded">
          + Agregar fila
        </button>


        <div class="mt-6 text-right">
          <%= submit_tag "Confirmar importación",
                class: "bg-blue-600 text-white px-4 py-2 rounded" %>
        </div>

      <% end %>

    <% end %>
  </div>
<% end %>
